{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
